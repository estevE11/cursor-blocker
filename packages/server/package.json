{
  "name": "cursor-blocker",
  "version": "0.0.2",
  "description": "Blocks distracting sites unless Cursor AI is actively generating code",
  "author": "Theo Browne",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteve/cursor-blocker.git"
  },
  "homepage": "https://github.com/esteve/cursor-blocker",
  "bugs": {
    "url": "https://github.com/esteve/cursor-blocker/issues"
  },
  "type": "module",
  "bin": {
    "cursor-blocker": "./dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/bin.ts src/index.ts --format esm --dts --clean",
    "start": "node dist/bin.js",
    "dev": "tsx src/bin.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cursor-blocker/shared": "workspace:*",
    "puppeteer-core": "^24.22.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "cursor",
    "cursor-ide",
    "productivity",
    "blocker",
    "focus",
    "distraction"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
